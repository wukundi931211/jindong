<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.setting.view.activity.AddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <com.baiwei.tianlong.jindong.custom_view.MySearchView
            android:id="@+id/mtv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_background="@drawable/back"
            app:right_background="@color/colorAccent"
            app:search_background="@color/colorAccent"
            app:search_hint_text="地址管理"></com.baiwei.tianlong.jindong.custom_view.MySearchView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_addAddress_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="+  新建地址"
        android:textColor="#fff"
        android:textSize="20dp" />
</RelativeLayout>