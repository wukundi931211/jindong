<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".mvp.register.view.activity.RegisterActivity">

    <com.baiwei.tianlong.jindong.custom_view.MySearchView
        android:id="@+id/mtv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_background="@drawable/back"
        app:right_background="@drawable/service"
        app:search_background="@color/colorAccent"
        app:search_hint_text="手机号快速注册">

    </com.baiwei.tianlong.jindong.custom_view.MySearchView>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/jd_buy_icon" />

    <EditText
        android:id="@+id/ed_mobile_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ed_password_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_now_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="#fcb8b1"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="#fff"
        android:textSize="20dp" />
</LinearLayout>